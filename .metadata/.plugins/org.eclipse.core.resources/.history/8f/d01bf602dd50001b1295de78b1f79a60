package com.ordereat.OrderEat.Repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.ordereat.OrderEat.Entity.RestaurantOwner;

@Repository
public interface RestaurantOwnerRepository extends CrudRepository<RestaurantOwner, Long> {

	@Query("SELECT owner FROM RestaurantOwner owner where owner.id = :id ")
	RestaurantOwner findRestaurantOwnerById(@Param("id")Long id);
}
