package com.ordereat.OrderEat.Repository;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.ordereat.OrderEat.Entity.RestaurantDetails;
import com.ordereat.OrderEat.Entity.RestaurantOwner;

@Repository
public interface RestaurantDetailsRepository extends CrudRepository<RestaurantDetails, Long>{

	
	@Query("SELECT owner FROM RestaurantOwner OWNER where owner.id = :id ")
	RestaurantDetails findRestaurantOwnerById(Long id);
}
